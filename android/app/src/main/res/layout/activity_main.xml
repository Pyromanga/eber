<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hallo! Ich bleibe stehen."
        android:textSize="24sp" />

    <Button
        android:id="@+id/showDotButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Punkt anzeigen" />
        
    <Button
        android:id="@+id/showLineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Linie anzeigen" />

    <Button
        android:id="@+id/modeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Change Mode" />
        
    <SeekBar
            android:id="@+id/widthSeekBar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:max="50"       android:min="5"        android:progress="15"  android:paddingStart="8dp"
            android:paddingEnd="8dp" />
        
    <FrameLayout
        android:id="@+id/viewContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:background="#EEEEEE"/>
</LinearLayout>
